{
	"compileOnSave": false,
	"compilerOptions": {
		"target": "ES2020",
		"moduleResolution": "node",
		"jsx": "react",
		"pretty": true,
		"strict": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"strictPropertyInitialization": false,
		"allowJs": true,
		"outDir": "dist"
	},
	"exclude": [
		"node_modules",
		"tscout",
		"dist",
		"native"
	]
}
